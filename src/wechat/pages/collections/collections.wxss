/* pages/collections/collections.wxss */
@import "../common/lib/weui.wxss";
/* pages/index/index.wxss */
.swiper-image{
  width: 100%;
  height: 100%;
}
.collections-right{
  float: right;
  width: 50%
}
.index-collections{
  margin: 0 30rpx 40rpx 30rpx;
  border: 1px solid #b2b2b2;
  border-radius:5px;
}
.exhibit-image{
  width: 50%;
  height: 100px;
  padding: 10px 0
}
.exhibit-textbox{
  display: inline-block;
  width: 80%;
  padding: 20rpx 0
}
.exhibit-moneybox{
  display: inline-block;
  width: 19%;
}
.exhibit-name{
  position: relative;
  font-size: 14pt;
  color: #353535;
  padding: 20rpx 0 20rpx 20rpx;
}
.exhibit-info{
  position: relative;
  font-size: 8pt;
  top: 6pt;
  color: #888888;
  padding: 0 10rpx;
  float: right
}
.exhibit-money{
  font-size: 14pt;
  color: #e64340;
}
.exhibit-iconbox{
  display: inline-block;
  padding: 0 10rpx;
}
.exhibit-icon{
  display: inline-block;
  width: 30rpx;
  vertical-align: middle;
}
.exhibit-icon-text{
  display: inline-block;
  font-size: 8pt;
  color: #888888;
  padding: 0 0 0 10rpx;
  vertical-align: middle;
}


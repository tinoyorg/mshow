@import "../common/lib/weui.wxss";
/* pages/index/index.wxss */
.swiper-image{
  width: 100%;
  height: 100%;
}
.index-search{
  margin: 20rpx 125rpx;
  border: 1px solid #b2b2b2;
  border-radius:20px;
}
.search-icon{
  padding: 0 25rpx;
  vertical-align: middle;
}
.search-input{
  height: 35px;
  width: 160px;
  line-height: 35rpx;
  display: inline-block;
  vertical-align:middle;
}
.index-exhibit{
  margin: 0 30rpx 40rpx 30rpx;
  border: 1px solid #b2b2b2;
  border-radius:5px;
}
.exhibit-image{
  width: 100%;
}
.exhibit-textbox{
  display: inline-block;
  width: 80%;
}
.exhibit-moneybox{
  display: inline-block;
  width: 19%;
}
.exhibit-name{
  display: block;
  font-size: 14pt;
  color: #353535;
  padding: 20rpx 0 20rpx 20rpx;
}
.exhibit-info{
  display: block;
  font-size: 8pt;
  color: #888888;
  padding: 0 20rpx;
}
.exhibit-money{
  font-size: 14pt;
  color: #e64340;
}
.exhibit-iconbox{
  display: inline-block;
  padding: 0 20rpx;
}
.exhibit-icon{
  display: inline-block;
  width: 30rpx;
  vertical-align: middle;
}
.exhibit-icon-text{
  display: inline-block;
  font-size: 8pt;
  color: #888888;
  padding: 0 0 0 10rpx;
  vertical-align: middle;
}


/* pages/information/information.wxss */
@import "../common/lib/weui.wxss";
.information-grid{
  border-bottom: 1px solid #b2b2b2;
}
.home-top{
  padding: 50rpx 0
}
.home-td{
  display: flex;
  align-items: center;
  justify-content: space-between
}
.home-button{
  width: 60%
}
.home-image{
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
}
.swiper-image{
  width: 100%;
  height: 100%;
}
.index-exhibit{
  margin: 0 30rpx 40rpx 30rpx;
  border: 1px solid #b2b2b2;
  border-radius:5px;
}
.home-grid{
  border-top: 1px solid #b2b2b2;
}
.home-grid-bottom{
  border-top: 1px solid #b2b2b2;
  border-bottom: 1px solid #b2b2b2;
}
.exhibit-image{
  width: 100%;
}
.exhibit-textbox{
  display: inline-block;
  width: 80%;
}
.exhibit-moneybox{
  display: inline-block;
  width: 19%;
}
.exhibit-name{
  display: block;
  font-size: 14pt;
  color: #353535;
  padding: 20rpx 0 20rpx 20rpx;
}
.exhibit-info{
  display: block;
  font-size: 8pt;
  color: #888888;
  padding: 0 20rpx;
}
.exhibit-money{
  font-size: 14pt;
  color: #e64340;
}
.exhibit-iconbox{
  display: inline-block;
  padding: 0 20rpx;
}
.exhibit-icon{
  display: inline-block;
  width: 30rpx;
  vertical-align: middle;
}
.exhibit-icon-text{
  display: inline-block;
  font-size: 8pt;
  color: #888888;
  padding: 0 0 0 10rpx;
  vertical-align: middle;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
}

.userinfo-nickname {
  color: #aaa;
  float: right
}
